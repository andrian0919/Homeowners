@model HomeownersSubdivision.Models.ContactDirectory

@{
    ViewData["Title"] = "Delete Contact";
}

<div class="bg-white p-6 rounded-lg shadow-md">
    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-800">Delete Contact</h1>
        
        <div class="flex space-x-2">
            <a asp-action="Index" class="btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Directory
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-secondary">
                <i class="bi bi-pencil me-1"></i> Edit Instead
            </a>
        </div>
    </div>

    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="bi bi-exclamation-triangle text-yellow-400"></i>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    Are you sure you want to delete this contact? This action cannot be undone.
                </p>
            </div>
        </div>
    </div>
    
    <div class="bg-gray-50 p-6 rounded-lg mb-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-lg font-semibold text-gray-700 mb-2">@Model.Name</h3>
                <p class="text-gray-600">@Model.Title</p>
                @if (!string.IsNullOrEmpty(Model.Department))
                {
                    <p class="text-gray-600 mb-4">@Model.Department</p>
                }
                
                <div class="mt-4">
                    <p class="text-sm text-gray-500 uppercase mb-2">Contact Information</p>
                    <ul class="space-y-2">
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <li class="flex items-center">
                                <i class="bi bi-telephone text-gray-400 mr-2"></i>
                                <span>@Model.PhoneNumber</span>
                            </li>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <li class="flex items-center">
                                <i class="bi bi-envelope text-gray-400 mr-2"></i>
                                <span>@Model.Email</span>
                            </li>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Office))
                        {
                            <li class="flex items-center">
                                <i class="bi bi-building text-gray-400 mr-2"></i>
                                <span>@Model.Office</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            
            <div>
                <p class="text-sm text-gray-500 uppercase mb-2">Category</p>
                <p class="mb-4">@Model.Category</p>
                
                @if (!string.IsNullOrEmpty(Model.WorkingHours))
                {
                    <p class="text-sm text-gray-500 uppercase mb-2">Working Hours</p>
                    <p class="mb-4">@Model.WorkingHours</p>
                }
                
                <p class="text-sm text-gray-500 uppercase mb-2">Status</p>
                <p class="mb-4">
                    @if (Model.IsActive)
                    {
                        <span class="text-green-500"><i class="bi bi-check-circle"></i> Active</span>
                    }
                    else
                    {
                        <span class="text-red-500"><i class="bi bi-x-circle"></i> Inactive</span>
                    }
                </p>
                
                <p class="text-sm text-gray-500 uppercase mb-2">Created</p>
                <p class="mb-4">@Model.CreatedAt.ToString("MMM d, yyyy")</p>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="Id" />
        
        <div class="space-x-4">
            <a asp-action="Index" class="btn-secondary">
                Cancel
            </a>
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded inline-flex items-center transition-colors">
                <i class="bi bi-trash me-1"></i> Delete Contact
            </button>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .btn-secondary {
            bg-white text-gray-700 border border-gray-300 font-medium py-2 px-4 rounded inline-flex items-center hover:bg-gray-50 transition-colors;
        }
    </style>
} 