@{
    ViewData["Title"] = "About Us";
}

@if (ViewData["UseLuxuryBackground"] is bool useLuxuryBackground && useLuxuryBackground)
{
    @await Html.PartialAsync("_LuxuryBackground")
}

<style>
    .about-section {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: transform 0.3s ease-in-out;
    }
    
    .about-section:hover {
        transform: translateY(-5px);
    }
    
    .about-header {
        background: linear-gradient(135deg, #2563EB 0%, #1E40AF 100%);
        color: white;
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }
    
    .about-header::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/images/backgrounds/pattern.png');
        background-size: cover;
        opacity: 0.1;
        z-index: 0;
    }
    
    .about-header .content {
        position: relative;
        z-index: 1;
    }
    
    .feature-card {
        background-color: white;
        border-radius: 0.75rem;
        padding: 1.5rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(229, 231, 235, 1);
        transition: all 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        border-color: rgba(37, 99, 235, 0.5);
    }
    
    .feature-icon {
        background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
        color: white;
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.4);
    }
</style>

<div class="container mx-auto px-4 py-12 luxury-page-container">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">About Our System</h1>
        <p class="text-xl text-blue-200 max-w-3xl mx-auto">Learn more about the subdivision management system that helps make our community better.</p>
    </div>
    
    <div class="about-section mb-12">
        <div class="about-header">
            <div class="content">
                <h2 class="text-3xl font-bold mb-2">@ViewBag.SystemName</h2>
                <p class="text-blue-100 mb-4">Version @ViewBag.Version</p>
                <div class="flex flex-col md:flex-row md:items-center md:space-x-8">
                    <div class="mb-4 md:mb-0">
                        <p class="text-sm text-blue-200 mb-1">Developed by</p>
                        <p class="font-medium">Ampao NeighborHood Team</p>
                    </div>
                    <div>
                        <p class="text-sm text-blue-200 mb-1">Established</p>
                        <p class="font-medium">2025</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="p-8 bg-white text-gray-700">
            <h3 class="text-2xl font-bold mb-6 text-gray-800">Our Mission</h3>
            <p class="mb-6">
                Our mission is to provide a comprehensive management solution for homeowners associations and subdivisions. 
                We aim to simplify community management, enhance communication between residents and administrators, 
                and create a more efficient and transparent system for managing community affairs.
            </p>
            
            <p class="mb-8">
                Through modern technology and user-focused design, we strive to make community living more enjoyable, 
                secure, and connected for everyone involved.
            </p>
            
            <h3 class="text-2xl font-bold mb-6 text-gray-800">Contact Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div>
                    <p class="font-medium text-gray-900">@ViewBag.CompanyName</p>
                    <p class="text-gray-600">@ViewBag.CompanyAddress</p>
                </div>
                <div>
                    <p class="font-medium text-gray-900">Contact Us</p>
                    <p class="text-gray-600">09196395581</p>
                    <p class="text-gray-600">balberos09123@gmail.com</p>
                </div>
            </div>
        </div>
    </div>
    
    <h2 class="text-3xl font-bold mb-8 text-center text-white">Our Team</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        <!-- Team Member Cards -->
        <div class="about-section p-6 text-center">
            <img src="~/images/Balberos.png" alt="Andrian S. Balberos" class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-blue-500">
            <h3 class="text-xl font-bold text-gray-800">Andrian S. Balberos</h3>
            <p class="text-blue-600 font-medium mb-2">Lead Developer & Project Manager</p>
            <p class="text-gray-600 text-sm">Oversees the entire project development, architecture design, and team coordination. Specializes in backend development and database management.</p>
        </div>
        
        <div class="about-section p-6 text-center">
            <img src="~/images/Cutad.jpg" alt="Arnold A. Cutad Jr." class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-blue-500">
            <h3 class="text-xl font-bold text-gray-800">Arnold A. Cutad Jr.</h3>
            <p class="text-blue-600 font-medium mb-2">Frontend Developer</p>
            <p class="text-gray-600 text-sm">Responsible for creating responsive and user-friendly interfaces. Specializes in UI/UX design and frontend implementation.</p>
        </div>
        
        <div class="about-section p-6 text-center">
            <img src="~/images/Lazaga.jpg" alt="Prince Dominic C. Lazaga" class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-blue-500">
            <h3 class="text-xl font-bold text-gray-800">Prince Dominic C. Lazaga</h3>
            <p class="text-blue-600 font-medium mb-2">Backend Developer</p>
            <p class="text-gray-600 text-sm">Handles server-side logic and API development. Focuses on system security and database optimization.</p>
        </div>
        
        <div class="about-section p-6 text-center">
            <img src="~/images/Singco.jpg" alt="Nathaniel Ron M. Singco" class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-blue-500">
            <h3 class="text-xl font-bold text-gray-800">Nathaniel Ron M. Singco</h3>
            <p class="text-blue-600 font-medium mb-2">Quality Assurance Engineer</p>
            <p class="text-gray-600 text-sm">Ensures software quality through testing and validation. Manages bug tracking and feature verification.</p>
        </div>
        
        <div class="about-section p-6 text-center">
            <img src="~/images/Caballes.jpg" alt="Joedell Derrick R. Caballes" class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-blue-500">
            <h3 class="text-xl font-bold text-gray-800">Joedell Derrick R. Caballes</h3>
            <p class="text-blue-600 font-medium mb-2">System Analyst</p>
            <p class="text-gray-600 text-sm">Analyzes system requirements and designs solutions. Coordinates between development team and stakeholders.</p>
        </div>
    </div>
    
    <h2 class="text-3xl font-bold mb-8 text-center">System Features</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        @{
            var icons = new string[] { 
                "bi-people", "bi-credit-card", "bi-calendar-event", 
                "bi-tools", "bi-chat-left-text", "bi-person-badge",
                "bi-car-front", "bi-megaphone", "bi-telephone", "bi-bar-chart" 
            };
            
            for (int i = 0; i < ViewBag.Features.Count; i++)
            {
                string feature = ViewBag.Features[i];
                string icon = i < icons.Length ? icons[i] : "bi-check";
                
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi @icon text-xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2 text-gray-800">@feature</h3>
                    <p class="text-gray-600">
                        @GetFeatureDescription(feature)
                    </p>
                </div>
            }
        }
    </div>
    
    <div class="text-center">
        <a href="mailto:@ViewBag.CompanyEmail" class="inline-block px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <i class="bi bi-envelope-fill mr-2"></i> Contact Us
        </a>
    </div>
</div>

@functions {
    public string GetFeatureDescription(string feature) {
        return feature switch {
            "Homeowner Management" => "Manage homeowner records, accounts, and profiles easily.",
            "Billing and Payments" => "Automated billing system with secure online payment options.",
            "Facility Reservations" => "Book community facilities with an intuitive calendar interface.",
            "Service Requests" => "Submit and track maintenance and service requests efficiently.",
            "Community Forum" => "Engage with other residents through our community discussion board.",
            "Visitor Passes" => "Create digital passes for guests visiting the subdivision.",
            "Vehicle Registration" => "Register and manage vehicles associated with each household.",
            "Announcements" => "Stay updated with important news and community announcements.",
            "Emergency Contacts" => "Access important contacts quickly during emergencies.",
            "Reports and Analytics" => "Generate insightful reports on community activities and finances.",
            _ => "Comprehensive tools to make community management easier and more effective."
        };
    }
} 