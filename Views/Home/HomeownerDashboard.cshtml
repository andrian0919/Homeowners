@section Styles {
    <style>
        /* Custom scrollbar styles */
        .announcements-container {
            max-height: 340px; /* Height for approximately 2 announcements */
            overflow-y: auto;
            padding-right: 6px;
            border-radius: 0.5rem;
        }

        /* Webkit scrollbar styling (Chrome, Safari, newer Edge) */
        .announcements-container::-webkit-scrollbar {
            width: 6px;
        }

        .announcements-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .announcements-container::-webkit-scrollbar-thumb {
            background: #c5c5c5;
            border-radius: 10px;
        }

        .announcements-container::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

        /* For Firefox */
        .announcements-container {
            scrollbar-width: thin;
            scrollbar-color: #c5c5c5 #f1f1f1;
        }
    </style>
}

@{
    ViewData["Title"] = "Homeowner Dashboard";
    var userName = Context.Session.GetString("FullName");
    var announcements = ViewBag.Announcements as List<HomeownersSubdivision.Models.Announcement>;
}

<div class="container mx-auto px-4 py-8">
    <div class="jumbotron homeowner-gradient mb-6 rounded-lg p-8">
        <div class="container mx-auto">
            <h1 class="text-4xl font-heading font-bold mb-2">
                Welcome, @userName!
            </h1>
            <p class="text-xl opacity-90">Your Homeowners Subdivision dashboard</p>
        </div>
    </div>

    <!-- Announcements Section -->
    <div class="mb-10">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold text-gray-800">
                <i class="bi bi-megaphone-fill mr-2"></i>Announcements
            </h2>
            <a href="@Url.Action("Index", "Announcements")" class="text-blue-600 hover:underline">
                View All <i class="bi bi-arrow-right ml-1"></i>
            </a>
        </div>

        @if (announcements == null || !announcements.Any())
        {
            <div class="bg-gray-100 rounded-lg p-6 text-center">
                <p class="text-gray-600">No announcements available at this time.</p>
            </div>
        }
        else
        {
            <div class="announcements-container">
                <div class="grid grid-cols-1 gap-4">
                    @foreach (var item in announcements.OrderByDescending(a => a.PublishDate))
                    {
                        <div class="bg-white shadow-md rounded-lg overflow-hidden">
                            <div class="p-6">
                                <h3 class="text-xl font-semibold text-gray-800 mb-2">
                                    <a href="@Url.Action("Details", "Announcements", new { id = item.Id })" class="hover:text-blue-600">
                                        @item.Title
                                    </a>
                                </h3>
                                
                                <div class="text-sm text-gray-500 mb-3">
                                    <span>
                                        <i class="bi bi-calendar mr-1"></i>
                                        @(item.PublishDate.ToString("MMMM d, yyyy"))
                                    </span>
                                    <span class="mx-2">â€¢</span>
                                    <span>
                                        <i class="bi bi-person mr-1"></i>
                                        @if (item.Creator != null)
                                        {
                                            @(item.Creator.FirstName + " " + item.Creator.LastName)
                                        }
                                        else
                                        {
                                            <span>Admin</span>
                                        }
                                    </span>
                                </div>
                                
                                <div class="text-gray-700 mb-4 line-clamp-3">
                                    @Html.Raw(item.Content.Length > 150 ? item.Content.Substring(0, 150) + "..." : item.Content)
                                </div>
                                
                                <div class="text-right">
                                    <a href="@Url.Action("Details", "Announcements", new { id = item.Id })" class="text-blue-600 hover:underline">
                                        Read more
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Dashboard Cards -->
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- My Profile Card -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden card-hover">
            <div class="p-6">
                <div class="flex flex-col items-center mb-4">
                    <i class="bi bi-person-circle text-purple-600 text-4xl mb-3"></i>
                    <h3 class="text-xl font-semibold mb-2">My Profile</h3>
                    <p class="text-gray-600 text-center">Update your personal information and settings.</p>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("Profile", "Account")" class="btn-purple block text-center py-2 px-4 rounded">
                        <i class="bi bi-pencil-square mr-1"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Property Information Card -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden card-hover">
            <div class="p-6">
                <div class="flex flex-col items-center mb-4">
                    <i class="bi bi-house-door text-primary text-4xl mb-3"></i>
                    <h3 class="text-xl font-semibold mb-2">My Property</h3>
                    <p class="text-gray-600 text-center">View and manage your property information.</p>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("MyProperty", "Home")" class="btn-primary block text-center py-2 px-4 rounded">
                        View Details
                    </a>
                </div>
            </div>
        </div>

        <!-- Maintenance Request Card -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden card-hover">
            <div class="p-6">
                <div class="flex flex-col items-center mb-4">
                    <i class="bi bi-tools text-warning text-4xl mb-3"></i>
                    <h3 class="text-xl font-semibold mb-2">Maintenance</h3>
                    <p class="text-gray-600 text-center">Submit and track maintenance requests.</p>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("RequestService", "Maintenance")" class="btn-warning block text-center py-2 px-4 rounded">
                        Request Service
                    </a>
                </div>
            </div>
        </div>

        <!-- Payments Card -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden card-hover">
            <div class="p-6">
                <div class="flex flex-col items-center mb-4">
                    <i class="bi bi-credit-card text-success text-4xl mb-3"></i>
                    <h3 class="text-xl font-semibold mb-2">Payments</h3>
                    <p class="text-gray-600 text-center">View payment history and make payments.</p>
                </div>
                <div class="mt-4">
                    <a href="@Url.Action("MyBills", "Billing")" class="btn-success block text-center py-2 px-4 rounded">
                        Manage Payments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Any client-side scripts can go here
    </script>
} 