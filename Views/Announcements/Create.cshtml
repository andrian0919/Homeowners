@model HomeownersSubdivision.Models.Announcement

@{
    ViewData["Title"] = "Create Announcement";
}

@await Html.PartialAsync("_LuxuryBackground")


<div class="container mx-auto px-4 py-8 luxury-page-container">
    <div class="max-w-4xl mx-auto">
        <div class="mb-4">
            <a href="@Url.Action("Index")" class="text-white hover:text-theme-light font-medium flex items-center">
                <i class="bi bi-arrow-left mr-1"></i> Back to Announcements
            </a>
        </div>
        
        <div class="luxury-content-card">
            <div class="p-6">
                <h1 class="text-2xl font-bold text-gray-800 mb-6">Create New Announcement</h1>
                
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div class="col-span-2">
                            <div class="form-group">
                                <label asp-for="Title" class="form-label">Title</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-span-2">
                            <div class="form-group">
                                <label asp-for="Content" class="form-label">Content</label>
                                <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div>
                            <div class="form-group">
                                <label asp-for="PublishDate" class="form-label">Publish Date</label>
                                <input asp-for="PublishDate" class="form-control" type="date" />
                                <span asp-validation-for="PublishDate" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div>
                            <div class="form-group">
                                <label asp-for="ExpireDate" class="form-label">Expiration Date (Optional)</label>
                                <input asp-for="ExpireDate" class="form-control" type="date" />
                                <span asp-validation-for="ExpireDate" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-span-2">
                            <div class="form-check">
                                <input asp-for="IsPublished" class="form-check-input" />
                                <label asp-for="IsPublished" class="form-check-label ml-2">Publish immediately</label>
                                <span asp-validation-for="IsPublished" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex justify-between">
                        <a href="@Url.Action("Index")" class="btn-secondary py-2 px-4 rounded">Cancel</a>
                        <button type="submit" class="btn-luxury py-2 px-4 rounded">
                            <i class="bi bi-save mr-1"></i> Create Announcement
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
