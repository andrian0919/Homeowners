@model HomeownersSubdivision.Models.Announcement

@{
    ViewData["Title"] = "Edit Announcement";
}

@await Html.PartialAsync("_LuxuryBackground")


<div class="container mx-auto px-4 py-8 luxury-page-container">
    <div class="max-w-4xl mx-auto">
        <div class="mb-4">
            <a href="@Url.Action("Index")" class="text-white hover:text-theme-light font-medium flex items-center">
                <i class="bi bi-arrow-left mr-1"></i> Back to Announcements
            </a>
        </div>
        
        <div class="luxury-content-card">
            <div class="p-6">
                <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Announcement</h1>
                
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedBy" />
                    
                    <div class="mb-4">
                        <label asp-for="Title" class="block text-gray-700 font-semibold mb-2"></label>
                        <input asp-for="Title" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Content" class="block text-gray-700 font-semibold mb-2"></label>
                        <textarea asp-for="Content" rows="10" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                        <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="PublishDate" class="block text-gray-700 font-semibold mb-2"></label>
                            <input asp-for="PublishDate" type="date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                            <span asp-validation-for="PublishDate" class="text-red-500 text-sm"></span>
                        </div>
                        
                        <div>
                            <label asp-for="ExpireDate" class="block text-gray-700 font-semibold mb-2"></label>
                            <input asp-for="ExpireDate" type="date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                            <span asp-validation-for="ExpireDate" class="text-red-500 text-sm"></span>
                            <small class="text-gray-500">Leave blank if the announcement does not expire</small>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="flex items-center">
                            <input asp-for="IsPublished" class="mr-2 rounded border-gray-300 text-primary focus:ring-primary" />
                            <label asp-for="IsPublished" class="text-gray-700"></label>
                        </div>
                        <small class="text-gray-500">Unpublished announcements are not visible to homeowners</small>
                    </div>
                    
                    <div class="flex justify-between">
                        <a href="@Url.Action("Index")" class="btn-secondary py-2 px-4 rounded">Cancel</a>
                        <button type="submit" class="btn-luxury py-2 px-4 rounded">
                            <i class="bi bi-save mr-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
