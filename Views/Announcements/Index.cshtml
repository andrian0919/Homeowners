@model IEnumerable<HomeownersSubdivision.Models.Announcement>

@{
    ViewData["Title"] = "Announcements";
    var isAdminOrStaff = Context.Session.GetString("UserRole") == "Administrator" || 
                          Context.Session.GetString("UserRole") == "Staff";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Announcements</h1>
        @if (isAdminOrStaff)
        {
            <a href="@Url.Action("Create")" class="btn-primary py-2 px-4 rounded">
                <i class="bi bi-plus-circle mr-2"></i>New Announcement
            </a>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
            <p>@TempData["SuccessMessage"]</p>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="bg-gray-100 rounded-lg p-6 text-center">
            <p class="text-gray-600 text-lg">No announcements available.</p>
            @if (isAdminOrStaff)
            {
                <p class="mt-2">
                    <a href="@Url.Action("Create")" class="text-blue-600 hover:underline">
                        Create the first announcement
                    </a>
                </p>
            }
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 gap-6">
            @foreach (var item in Model.OrderByDescending(a => a.PublishDate))
            {
                <div class="bg-white shadow-md rounded-lg overflow-hidden border border-gray-200 transition-shadow hover:shadow-lg">
                    <div class="p-6">
                        <div class="flex justify-between items-start">
                            <h2 class="text-xl font-semibold text-gray-800 mb-1">
                                <a href="@Url.Action("Details", new { id = item.Id })" class="hover:text-blue-600">
                                    @item.Title
                                </a>
                            </h2>
                            
                            @if (!item.IsPublished)
                            {
                                <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded">Draft</span>
                            }
                            else if (item.ExpireDate != null && item.ExpireDate < DateTime.Today)
                            {
                                <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded">Expired</span>
                            }
                        </div>
                        
                        <div class="text-sm text-gray-500 mb-3">
                            <span>
                                <i class="bi bi-calendar mr-1"></i>
                                @(item.PublishDate.ToString("MMMM d, yyyy"))
                            </span>
                            <span class="mx-2">â€¢</span>
                            <span>
                                <i class="bi bi-person mr-1"></i>
                                @if (item.Creator != null)
                                {
                                    @(item.Creator.FirstName + " " + item.Creator.LastName)
                                }
                                else
                                {
                                    <span>Unknown User</span>
                                }
                            </span>
                        </div>
                        
                        <div class="text-gray-700 mb-4">
                            @{
                                var preview = item.Content.Length > 200 
                                    ? item.Content.Substring(0, 200) + "..." 
                                    : item.Content;
                            }
                            @Html.Raw(preview)
                        </div>
                        
                        <div class="flex justify-between items-center mt-4">
                            <a href="@Url.Action("Details", new { id = item.Id })" class="text-blue-600 hover:underline">
                                Read more <i class="bi bi-arrow-right ml-1"></i>
                            </a>
                            
                            @if (isAdminOrStaff)
                            {
                                <div class="flex items-center space-x-2">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="text-blue-600 hover:text-blue-800">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="text-red-600 hover:text-red-800">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any client-side scripts here if needed
    </script>
} 