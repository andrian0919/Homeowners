@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mx-auto px-4 py-16">
    <div class="max-w-lg mx-auto text-center">
        <div class="bg-red-100 text-red-700 p-8 rounded-lg shadow-md mb-8">
            <i class="bi bi-shield-lock text-6xl mb-4 block"></i>
            <h1 class="text-3xl font-bold mb-4">Access Denied</h1>
            <p class="text-lg mb-6">
                You do not have permission to access this resource.
            </p>
            <p class="text-base mb-8">
                If you believe this is an error, please contact the system administrator.
            </p>
            <div class="flex justify-center">
                <a href="@Url.Action("Index", "Home")" class="bg-red-600 hover:bg-red-700 text-white py-2 px-6 rounded-md transition duration-300">
                    <i class="bi bi-house-door mr-2"></i>Return to Home
                </a>
            </div>
        </div>
    </div>
</div> 