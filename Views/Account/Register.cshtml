@model HomeownersSubdivision.Models.User

@{
    ViewData["Title"] = "Register";
}

@if (ViewData["UseAuthBackground"] != null && (bool)ViewData["UseAuthBackground"])
{
    <partial name="_AuthBackground" />
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mt-4 luxury-card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Homeowner Registration</h4>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post" class="form-luxury">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="card mb-4 luxury-card">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Personal Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <div class="input-group-with-icon">
                                        <i class="fas fa-user input-icon-left"></i>
                                    <input asp-for="FirstName" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                    <div class="input-group-with-icon">
                                        <i class="fas fa-user input-icon-left"></i>
                                    <input asp-for="LastName" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <div class="input-group-with-icon">
                                    <i class="fas fa-envelope input-icon-left"></i>
                                <input asp-for="Email" class="form-control" type="email" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <div class="input-group-with-icon">
                                    <i class="fas fa-phone input-icon-left"></i>
                                <input asp-for="PhoneNumber" class="form-control" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card mb-4 luxury-card">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Property Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="Address" class="form-label">Property Address</label>
                                <div class="input-group-with-icon">
                                    <i class="fas fa-home input-icon-left"></i>
                                <input name="Address" id="Address" class="form-control" required />
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="LotNumber" class="form-label">Lot Number</label>
                                    <div class="input-group-with-icon">
                                        <i class="fas fa-map-marker-alt input-icon-left"></i>
                                    <input name="LotNumber" id="LotNumber" class="form-control" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="BlockNumber" class="form-label">Block Number</label>
                                    <div class="input-group-with-icon">
                                        <i class="fas fa-map-marker-alt input-icon-left"></i>
                                    <input name="BlockNumber" id="BlockNumber" class="form-control" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card mb-4 luxury-card">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Account Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Username</label>
                                <div class="input-group-with-icon">
                                    <i class="fas fa-user-circle input-icon-left"></i>
                                <input asp-for="Username" class="form-control" required />
                                </div>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <div class="input-group-with-icon">
                                        <i class="fas fa-lock input-icon-left"></i>
                                        <input asp-for="Password" class="form-control" type="password" id="password" required />
                                        <i class="fas fa-eye-slash input-icon-right password-toggle" data-target="password"></i>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="form-text">Password must be at least 6 characters long.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                                    <div class="input-group-with-icon">
                                        <i class="fas fa-lock input-icon-left"></i>
                                    <input name="confirmPassword" id="confirmPassword" class="form-control" type="password" required />
                                        <i class="fas fa-eye-slash input-icon-right password-toggle" data-target="confirmPassword"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-luxury btn-lg">Register</button>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <p>Already have an account? <a asp-action="Login">Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Toggle password visibility
        document.addEventListener('DOMContentLoaded', function() {
            const toggles = document.querySelectorAll('.password-toggle');
            toggles.forEach(toggle => {
                toggle.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    const passwordInput = document.getElementById(targetId);
                    
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        this.classList.replace('fa-eye-slash', 'fa-eye');
                    } else {
                        passwordInput.type = 'password';
                        this.classList.replace('fa-eye', 'fa-eye-slash');
                    }
                });
            });
        });
    </script>
} 