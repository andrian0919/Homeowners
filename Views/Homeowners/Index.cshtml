@model IEnumerable<HomeownersSubdivision.Models.Homeowner>

@{
    ViewData["Title"] = "Homeowners";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Homeowners</h1>
        <a asp-action="Create" class="btn btn-primary">Add New Homeowner</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Block/Lot</th>
                            <th>Contact</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.Address</td>
                                <td>Block @item.BlockNumber, Lot @item.LotNumber</td>
                                <td>
                                    <div>ðŸ“§ @item.Email</div>
                                    <div>ðŸ“± @item.Phone</div>
                                </td>
                                <td>@item.JoinDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
} 