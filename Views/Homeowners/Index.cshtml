@model IEnumerable<HomeownersSubdivision.Models.Homeowner>

@{
    ViewData["Title"] = "Homeowners";
}

<div class="container mx-auto px-4 py-8 luxury-page-container">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-4 sm:mb-0 flex items-center">
            <i class="fas fa-house-user text-success mr-2"></i> Homeowners
        </h1>
        <a asp-action="Create" class="btn-luxury flex items-center">
            <i class="fas fa-user-plus mr-2"></i> Add New Homeowner
        </a>
    </div>
    <div class="luxury-content-card p-6 shadow-lg animate-luxury">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 luxury-table">
                <thead class="bg-gradient-to-r from-blue-600 to-blue-400 text-white">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wider">Name</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wider">Address</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wider">Block/Lot</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wider">Contact</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wider">Join Date</th>
                        <th class="px-4 py-3 text-center text-xs font-semibold uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-blue-50 transition">
                            <td class="px-4 py-3 font-medium text-gray-900">@item.FirstName @item.LastName</td>
                            <td class="px-4 py-3 text-gray-700">@item.Address</td>
                            <td class="px-4 py-3 text-gray-700">Block @item.BlockNumber, Lot @item.LotNumber</td>
                            <td class="px-4 py-3">
                                <div class="flex items-center space-x-2"><i class="bi bi-envelope text-blue-500"></i><span>@item.Email</span></div>
                                <div class="flex items-center space-x-2"><i class="bi bi-telephone text-blue-500"></i><span>@item.Phone</span></div>
                            </td>
                            <td class="px-4 py-3 text-gray-700">@item.JoinDate.ToString("MMM dd, yyyy")</td>
                            <td class="px-4 py-3 text-center">
                                <div class="flex flex-col sm:flex-row gap-2 justify-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-outline-luxury flex items-center justify-center"><i class="fas fa-edit mr-1"></i> Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-info flex items-center justify-center"><i class="fas fa-info-circle mr-1"></i> Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger flex items-center justify-center"><i class="fas fa-trash mr-1"></i> Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
} 