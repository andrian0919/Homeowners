@model HomeownersSubdivision.Models.CreateFacilityViewModel
@{
    ViewData["Title"] = "Create Facility";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Create New Facility</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Facility Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Type" class="control-label">Facility Type</label>
                            <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<HomeownersSubdivision.Models.FacilityType>()"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MaxCapacity" class="control-label">Maximum Capacity</label>
                                    <input asp-for="MaxCapacity" class="form-control" type="number" min="1" max="1000" />
                                    <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HourlyRate" class="control-label">Hourly Rate</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="OpeningTime" class="control-label">Opening Time</label>
                                    <input asp-for="OpeningTime" class="form-control" type="time" />
                                    <span asp-validation-for="OpeningTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClosingTime" class="control-label">Closing Time</label>
                                    <input asp-for="ClosingTime" class="form-control" type="time" />
                                    <span asp-validation-for="ClosingTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 