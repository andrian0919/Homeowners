@model HomeownersSubdivision.Models.CreateFacilityViewModel
@{
    ViewData["Title"] = "Create Facility";
}

@await Html.PartialAsync("_LuxuryBackground")

<style>
    .main-heading {
        display: flex;
        align-items: center;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        background: linear-gradient(to right, #1a1a2e, #3366FF);
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .main-heading i {
        font-size: 1.75rem;
        margin-right: 0.75rem;
        color: #6889F7;
    }
    
    /* Fix text visibility in form fields */
    .form-input {
        color: #1a1a2e !important;
        background-color: white !important;
    }
    
    .form-select {
        color: #1a1a2e !important;
        background-color: white !important;
    }
</style>

<div class="container mx-auto px-4 py-8 luxury-page-container">
    <div class="main-heading">
        <i class="fas fa-building"></i> Create New Facility
    </div>
    
    <p class="text-gray-200 mb-6">Add a new facility to the community</p>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <form asp-action="Create" class="p-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            
            <div class="mb-6">
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Facility Name</label>
                <input asp-for="Name" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm form-input" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
            </div>
            
            <div class="mb-6">
                <label asp-for="Type" class="block text-sm font-medium text-gray-700 mb-1">Facility Type</label>
                <select asp-for="Type" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm form-select" asp-items="Html.GetEnumSelectList<HomeownersSubdivision.Models.FacilityType>()"></select>
                <span asp-validation-for="Type" class="text-red-500 text-sm mt-1"></span>
            </div>
            
            <div class="mb-6">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <textarea asp-for="Description" rows="3" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm form-input"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm mt-1"></span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="MaxCapacity" class="block text-sm font-medium text-gray-700 mb-1">Maximum Capacity</label>
                    <input asp-for="MaxCapacity" type="number" min="1" max="1000" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm form-input" />
                    <span asp-validation-for="MaxCapacity" class="text-red-500 text-sm mt-1"></span>
                </div>
                <div>
                    <label asp-for="HourlyRate" class="block text-sm font-medium text-gray-700 mb-1">Hourly Rate</label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <input asp-for="HourlyRate" type="number" step="0.01" min="0" class="pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm form-input" />
                    </div>
                    <span asp-validation-for="HourlyRate" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label asp-for="OpeningTime" class="block text-sm font-medium text-gray-700 mb-1">Opening Time</label>
                    <input asp-for="OpeningTime" type="time" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm form-input" />
                    <span asp-validation-for="OpeningTime" class="text-red-500 text-sm mt-1"></span>
                </div>
                <div>
                    <label asp-for="ClosingTime" class="block text-sm font-medium text-gray-700 mb-1">Closing Time</label>
                    <input asp-for="ClosingTime" type="time" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm form-input" />
                    <span asp-validation-for="ClosingTime" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>
            
            <div class="flex justify-between items-center mt-8">
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i class="fas fa-arrow-left mr-2"></i> Back to List
                </a>
                <button type="submit" class="btn-luxury inline-flex items-center px-4 py-2 rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i class="fas fa-save mr-2"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 