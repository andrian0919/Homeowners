@model HomeownersSubdivision.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container max-w-2xl mx-auto py-8">
    <div class="luxury-content-card p-8 animate-luxury">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center"><i class="fas fa-user text-primary mr-2"></i> User Details</h1>
        <div class="mb-8">
            <h2 class="text-lg font-semibold text-gray-700 mb-4">Basic Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-2">
                <div>
                    <span class="block text-gray-500 text-xs font-semibold">First Name</span>
                    <span class="block text-gray-800">@Model.FirstName</span>
                </div>
                <div>
                    <span class="block text-gray-500 text-xs font-semibold">Last Name</span>
                    <span class="block text-gray-800">@Model.LastName</span>
                </div>
            </div>
            <div class="mb-2">
                <span class="block text-gray-500 text-xs font-semibold">Phone Number</span>
                <span class="block text-gray-800">@(Model.PhoneNumber ?? "Not provided")</span>
            </div>
        </div>
        <div class="mb-8">
            <h2 class="text-lg font-semibold text-gray-700 mb-4">Account Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-2">
                <div>
                    <span class="block text-gray-500 text-xs font-semibold">Username</span>
                    <span class="block text-gray-800">@Model.Username</span>
                </div>
                <div>
                    <span class="block text-gray-500 text-xs font-semibold">Email</span>
                    <span class="block text-gray-800">@Model.Email</span>
                </div>
            </div>
            <div class="mb-2">
                <span class="block text-gray-500 text-xs font-semibold">Role</span>
                <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-blue-400 to-blue-600 text-white">@Model.Role</span>
            </div>
            <div class="mb-2">
                <span class="block text-gray-500 text-xs font-semibold">Status</span>
                @if (Model.IsActive)
                {
                    <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">Active</span>
                }
                else
                {
                    <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">Inactive</span>
                }
            </div>
            <div class="mb-2">
                <span class="block text-gray-500 text-xs font-semibold">Created Date</span>
                <span class="block text-gray-800">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
            </div>
            <div class="mb-2">
                <span class="block text-gray-500 text-xs font-semibold">Last Login</span>
                <span class="block text-gray-800">@(Model.LastLoginDate != null ? ((DateTime)Model.LastLoginDate).ToString("MMMM dd, yyyy HH:mm") : "Never")</span>
            </div>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 mt-6">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-outline-luxury w-full sm:w-auto flex justify-center items-center"><i class="fas fa-edit mr-2"></i> Edit</a>
            <a asp-action="Index" class="btn-outline-luxury w-full sm:w-auto flex justify-center items-center"><i class="fas fa-arrow-left mr-2"></i> Back to List</a>
        </div>
    </div>
</div> 