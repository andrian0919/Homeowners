@model HomeownersSubdivision.ViewModels.LuxuryCardViewModel

<div class="dashboard-card-luxury animate-luxury @(Model.DelayClass ?? "")">
    <div class="card-header">
        <h3 class="text-xl font-semibold flex items-center">
            @if (!string.IsNullOrEmpty(Model.Icon))
            {
                <i class="@Model.Icon mr-2"></i>
            }
            @Model.Title
        </h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-gray-600 mb-4">@Model.Description</p>
        }
        
        @if (Model.Content != null)
        {
            @Model.Content
        }
        
        @if (!string.IsNullOrEmpty(Model.ButtonText))
        {
            <div class="mt-auto pt-4">
                <a href="@Model.ButtonUrl" class="btn-luxury w-full flex justify-center items-center">
                    @if (!string.IsNullOrEmpty(Model.ButtonIcon))
                    {
                        <i class="@Model.ButtonIcon mr-2"></i>
                    }
                    @Model.ButtonText
                </a>
            </div>
        }
    </div>
</div> 