@{
    var userRole = Context.Session?.GetString("UserRole");
    var userName = Context.Session?.GetString("UserName");
    var headerClasses = "";
    
    if (userRole == UserRole.Administrator.ToString())
    {
        headerClasses = "admin-luxury-gradient";
    }
    else if (userRole == UserRole.Staff.ToString())
    {
        headerClasses = "staff-luxury-gradient";
    }
    else if (userRole == UserRole.Homeowner.ToString())
    {
        headerClasses = "homeowner-luxury-gradient";
    }
    else
    {
        headerClasses = "guest-luxury-gradient";
    }

    string controller = HttpContextAccessor.HttpContext.Request.RouteValues["controller"]?.ToString();
    string action = HttpContextAccessor.HttpContext.Request.RouteValues["action"]?.ToString();
    bool isLoginPage = controller == "Account" && action == "Login";
}
<body class="min-h-screen flex flex-col bg-gray-50">
    @{
        bool isHomePage = HttpContextAccessor.HttpContext.Request.Path.Value.Trim('/').ToLower() == "home" || 
                        HttpContextAccessor.HttpContext.Request.Path.Value.Trim('/').ToLower() == "";
    }
    
    @if (isHomePage)
    {
        <!-- Include video background partial view for home page -->
        <partial name="_VideoBackground" />
    }

    <header class="@headerClasses luxury-header text-white shadow">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <div class="flex items-center space-x-6">
                <a class="text-xl font-bold text-white flex items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-fill mr-2"></i>
                    <span>NeighborHood</span>
                </a>
                @if (!string.IsNullOrEmpty(userRole))
                {
                    <div class="hidden md:flex items-center">
                        <span class="badge-role bg-white bg-opacity-20 text-white">
                            @userRole
                        </span>
                    </div>
                }
            </div>
            <div class="flex items-center space-x-4">
                @if (!string.IsNullOrEmpty(userRole))
                {
                    <div class="hidden md:block text-sm">
                        <div class="text-right">
                            <span class="font-semibold">@userName</span>
                        </div>
                        <div class="text-white text-opacity-80 text-xs">
                            @userRole
                        </div>
                    </div>
                    
                    <!-- Notifications Bell -->
                    <div x-data="{ open: false, unreadCount: 0 }" x-init="
                        fetch('@Url.Action("GetUnreadCount", "Notifications")')
                            .then(response => response.json())
                            .then(data => { unreadCount = data.count })
                            .catch(error => console.error('Error fetching notification count:', error));
                        
                        // Poll for new notifications every 60 seconds
                        setInterval(() => {
                            fetch('@Url.Action("GetUnreadCount", "Notifications")')
                                .then(response => response.json())
                                .then(data => { unreadCount = data.count })
                                .catch(error => console.error('Error fetching notification count:', error));
                        }, 60000);
                    " class="relative ml-3">
                        <div>
                            <button x-on:click="
                                open = !open; 
                                if (open) {
                                    $refs.notificationsContainer.innerHTML = '<div class=\'p-4 text-center\'><i class=\'bi bi-hourglass-split animate-spin mr-2\'></i> Loading...</div>';
                                    fetch('@Url.Action("GetRecentNotifications", "Notifications")')
                                        .then(response => response.text())
                                        .then(html => { $refs.notificationsContainer.innerHTML = html })
                                        .catch(error => { 
                                            console.error('Error fetching notifications:', error);
                                            $refs.notificationsContainer.innerHTML = '<div class=\'p-4 text-center text-red-500\'><i class=\'bi bi-exclamation-triangle mr-2\'></i> Error loading notifications</div>';
                                        });
                                }
                            " type="button" class="relative text-white hover:text-white focus:outline-none" aria-expanded="false" aria-haspopup="true">
                                <span class="sr-only">View notifications</span>
                                <i class="bi bi-bell text-xl"></i>
                                <!-- Notification badge -->
                                <template x-if="unreadCount > 0">
                                    <span class="absolute top-0 right-0 -mt-1 -mr-1 flex h-4 w-4 items-center justify-center rounded-full bg-red-500 text-xs font-bold text-white" x-text="unreadCount > 9 ? '9+' : unreadCount"></span>
                                </template>
                            </button>
                        </div>
                        
                        <!-- Notifications dropdown -->
                        <div x-show="open" x-on:click.away="open = false" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-150" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 z-10 mt-2 w-96 max-w-[90vw] origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" tabindex="-1">
                            <div class="px-4 py-3 border-b flex justify-between items-center">
                                <h3 class="text-sm font-semibold text-gray-900">Notifications</h3>
                                <a href="@Url.Action("Index", "Notifications")" class="text-xs text-primary hover:text-primary-dark">View All</a>
                            </div>
                            <div x-ref="notificationsContainer" class="max-h-[60vh] overflow-y-auto">
                                <div class="p-4 text-center">
                                    <i class="bi bi-hourglass-split animate-spin mr-2"></i> Loading...
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div x-data="{ open: false }" class="relative ml-3">
                    <div>
                        <button x-on:click="open = !open" type="button" class="relative flex rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                            <span class="absolute -inset-1.5"></span>
                            <span class="sr-only">Open user menu</span>
                            <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                                <i class="bi bi-person text-gray-600"></i>
                            </div>
                        </button>
                    </div>
                    
                    <!-- Dropdown menu, show/hide based on menu state -->
                    <div x-show="open" x-on:click.away="open = false" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                        @if (Context.Session != null && Context.Session.GetString("UserName") != null)
                        {
                            <div class="px-4 py-2 text-sm text-gray-700 border-b">
                                <div class="font-medium">@Context.Session.GetString("FullName")</div>
                                <div class="text-xs text-gray-500">@Context.Session.GetString("UserRole")</div>
                            </div>
                            <a href="@Url.Action("Profile", "Account")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Your Profile</a>
                            <a href="@Url.Action("Logout", "Home")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Sign out</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Home")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Login</a>
                            <a href="@Url.Action("Register", "Home")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Register</a>
                        }
                    </div>
                </div>
            </div>
        </div>
