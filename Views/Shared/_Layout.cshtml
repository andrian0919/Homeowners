    <style>
        .nav-link {
            color: #6b7280;
            position: relative;
            font-weight: 500;
            font-size: 0.875rem;
            padding: 0.75rem 0.5rem;
            transition-property: color;
            transition-duration: 150ms;
            white-space: nowrap;
        }
        
        .nav-link:hover {
            color: #111827;
        }
        
        .nav-link.active {
            color: #3498db;
            font-weight: 600;
        }
        
        .nav-link.active:after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            right: 0;
            height: 2px;
            background-color: #3498db;
        }

        /* Special styling for Facilities nav link */
        .nav-link[asp-controller="Facilities"] {
            color: #9c59b6;
            font-weight: 600;
        }
        
        .nav-link[asp-controller="Facilities"]:hover {
            color: #8e44ad;
        }
        
        .nav-link[asp-controller="Facilities"].active {
            color: #9c59b6;
        }
        
        .nav-link[asp-controller="Facilities"].active:after {
            background-color: #9c59b6;
        }
        
        /* Admin dashboard styling for consistent theme */
        .nav-link[asp-action="AdminDashboard"],
        .nav-link[asp-controller="Announcements"],
        .nav-link[asp-controller="ServiceRequests"],
        .nav-link[asp-controller="Reservations"],
        .nav-link[asp-controller="VisitorPass"],
        .nav-link[asp-controller="VehicleRegistration"],
        .nav-link[asp-controller="EmergencyContact"],
        .nav-link[asp-controller="ContactDirectory"],
        .nav-link[asp-action="ManageUsers"],
        .nav-link[asp-controller="Billing"],
        .nav-link[asp-controller="Forum"],
        .nav-link[asp-controller="Feedback"],
        .nav-link[asp-controller="Reports"] {
            color: #4D76E1;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .nav-link[asp-action="AdminDashboard"]:hover,
        .nav-link[asp-controller="Announcements"]:hover,
        .nav-link[asp-controller="ServiceRequests"]:hover,
        .nav-link[asp-controller="Reservations"]:hover,
        .nav-link[asp-controller="VisitorPass"]:hover,
        .nav-link[asp-controller="VehicleRegistration"]:hover,
        .nav-link[asp-controller="EmergencyContact"]:hover,
        .nav-link[asp-controller="ContactDirectory"]:hover,
        .nav-link[asp-action="ManageUsers"]:hover,
        .nav-link[asp-controller="Billing"]:hover,
        .nav-link[asp-controller="Forum"]:hover,
        .nav-link[asp-controller="Feedback"]:hover,
        .nav-link[asp-controller="Reports"]:hover {
            color: #6889F7;
            transform: translateY(-1px);
            text-shadow: 0 1px 3px rgba(26, 26, 46, 0.2);
        }
        
        .nav-link[asp-action="AdminDashboard"].active,
        .nav-link[asp-controller="Announcements"].active,
        .nav-link[asp-controller="ServiceRequests"].active,
        .nav-link[asp-controller="Reservations"].active,
        .nav-link[asp-controller="VisitorPass"].active,
        .nav-link[asp-controller="VehicleRegistration"].active,
        .nav-link[asp-controller="EmergencyContact"].active,
        .nav-link[asp-controller="ContactDirectory"].active,
        .nav-link[asp-action="ManageUsers"].active,
        .nav-link[asp-controller="Billing"].active,
        .nav-link[asp-controller="Forum"].active,
        .nav-link[asp-controller="Feedback"].active,
        .nav-link[asp-controller="Reports"].active {
            color: #3366FF;
            font-weight: 700;
        }
        
        .nav-link[asp-action="AdminDashboard"].active:after,
        .nav-link[asp-controller="Announcements"].active:after,
        .nav-link[asp-controller="ServiceRequests"].active:after,
        .nav-link[asp-controller="Reservations"].active:after,
        .nav-link[asp-controller="VisitorPass"].active:after,
        .nav-link[asp-controller="VehicleRegistration"].active:after,
        .nav-link[asp-controller="EmergencyContact"].active:after,
        .nav-link[asp-controller="ContactDirectory"].active:after,
        .nav-link[asp-action="ManageUsers"].active:after,
        .nav-link[asp-controller="Billing"].active:after,
        .nav-link[asp-controller="Forum"].active:after,
        .nav-link[asp-controller="Feedback"].active:after,
        .nav-link[asp-controller="Reports"].active:after {
            background-color: #3366FF;
            height: 3px;
            box-shadow: 0 1px 2px rgba(26, 26, 46, 0.3);
        }

        @@media (max-width: 1280px) {
            .nav-link {
                padding: 0.75rem 0.4rem;
                font-size: 0.8rem;
            }
        }
    </style>
