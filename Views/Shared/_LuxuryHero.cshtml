@model HomeownersSubdivision.ViewModels.LuxuryHeroViewModel

<div class="hero-luxury" style="@(string.IsNullOrEmpty(Model.BackgroundImage) ? "" : $"background-image: url('{Model.BackgroundImage}');")">
    <div class="container mx-auto px-4 z-10 relative">
        <div class="hero-luxury-content text-center mx-auto animate-luxury">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">@Model.Title</h1>
            <p class="text-xl text-white mb-6 max-w-3xl mx-auto">@Model.Subtitle</p>
            
            @if (!string.IsNullOrEmpty(Model.PrimaryButtonText))
            {
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="@Model.PrimaryButtonUrl" class="btn-luxury">
                        @if (!string.IsNullOrEmpty(Model.PrimaryButtonIcon))
                        {
                            <i class="@Model.PrimaryButtonIcon mr-2"></i>
                        }
                        @Model.PrimaryButtonText
                    </a>
                    
                    @if (!string.IsNullOrEmpty(Model.SecondaryButtonText))
                    {
                        <a href="@Model.SecondaryButtonUrl" class="btn-outline-luxury border-white text-white hover:bg-white hover:bg-opacity-10">
                            @if (!string.IsNullOrEmpty(Model.SecondaryButtonIcon))
                            {
                                <i class="@Model.SecondaryButtonIcon mr-2"></i>
                            }
                            @Model.SecondaryButtonText
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div> 