@model IEnumerable<HomeownersSubdivision.Models.Analytics.SavedReport>

@{
    ViewData["Title"] = "Saved Reports";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Saved Reports</h1>
        <div class="flex space-x-2">
            <a href="@Url.Action("Index")" class="btn-outline-primary">
                <i class="bi bi-file-earmark-bar-graph mr-1"></i> Available Reports
            </a>
            <a href="@Url.Action("Dashboard")" class="btn-outline-info">
                <i class="bi bi-speedometer2 mr-1"></i> Analytics Dashboard
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-md">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-exclamation-triangle text-red-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-red-700">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6 rounded-md">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-check-circle text-green-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-green-700">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        </div>
    }

    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="p-4 bg-blue-50 border-b border-blue-100">
            <h2 class="text-lg font-semibold text-blue-700">Previously Generated Reports</h2>
            <p class="text-sm text-blue-600">View and manage your saved report results</p>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="p-6 text-center">
                <i class="bi bi-info-circle text-4xl text-gray-400 mb-3"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Saved Reports</h3>
                <p class="text-gray-600 mb-4">You haven't saved any report results yet.</p>
                <a href="@Url.Action("Index")" class="btn-primary">
                    <i class="bi bi-plus-circle mr-1"></i> Generate a Report
                </a>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Report Name</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Generated Date</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Generated By</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Range</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var report in Model)
                        {
                            bool hasValidData = !string.IsNullOrEmpty(report.ResultData);
                            bool isValid = hasValidData && report.ReportDefinition != null;
                            
                            <tr class="hover:bg-gray-50 @(!isValid ? "bg-red-50" : "")">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">@report.Name</div>
                                    @if (report.ReportDefinition != null)
                                    {
                                        <div class="text-xs text-gray-500">@report.ReportDefinition.Category</div>
                                    }
                                    else
                                    {
                                        <div class="text-xs text-red-500">Missing report definition</div>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">@report.GeneratedAt.ToString("yyyy-MM-dd HH:mm")</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        @(report.GeneratedBy != null ? report.GeneratedBy.Username : "System")
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (report.StartDate.HasValue && report.EndDate.HasValue)
                                    {
                                        <div class="text-sm text-gray-900">
                                            @report.StartDate.Value.ToString("yyyy-MM-dd") to @report.EndDate.Value.ToString("yyyy-MM-dd")
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-sm text-gray-500">No date range</div>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (isValid)
                                    {
                                        <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">
                                            Valid
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">
                                            @(hasValidData ? "Missing Definition" : "No Data")
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    @if (isValid)
                                    {
                                        <a href="@Url.Action("Results", new { id = report.Id })" class="text-blue-600 hover:text-blue-900 mr-3">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 mr-3">
                                            <i class="bi bi-eye-slash"></i> Unavailable
                                        </span>
                                    }
                                    <a href="@Url.Action("DeleteSavedReport", new { id = report.Id })" class="text-red-600 hover:text-red-900">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div> 